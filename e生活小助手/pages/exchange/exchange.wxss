page{
  background-color: #f6f6f6;
}
.txt{
  display: block;
  margin-top: 32rpx;
  margin-left: 32rpx;
  font-weight: bold;
  font-size: 40rpx;
}
.fromcoin{
  display: flex;
  justify-content: space-between;
  align-content: center;
  align-items: center;
  background-color: white;
  margin: 32rpx;
  padding: 32rpx;
  border-radius: 18rpx;
  box-shadow: 0.1rem 0.1rem 1rem rgba(0, 0, 0, 0.15);
}
.fromcoin text{
  display: inline-block;
  font-size: 54rpx;
  margin-right: 18rpx;
}
.fromcoin input{
  text-align:right;
  font-size: 48rpx;
  font-weight: bold;
  width: 250rpx;
  display: inline-block;
}
.btn{
  text-align: center;
  padding: 18rpx 0;
  width: 686rpx;
  margin: 64rpx 32rpx;
  color: white;
  font-size: 40rpx;
  font-weight: bold;
  background-color: #01DFD7;
   border-radius: 12rpx;
  box-shadow: 0.1rem 0.1rem 1rem rgba(0, 0, 0, 0.15);
}
.result{
   text-align:right;
  font-size: 48rpx;
  font-weight: bold;
  width: 250rpx;
  display: inline-block;
}