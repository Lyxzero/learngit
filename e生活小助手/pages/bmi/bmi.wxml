<view class="top">
  <view class="bmi">
    <text>BMI值\n</text>
  </view>
  <view class="sz">
    <text>{{bmi}}</text>
  </view>
  <view class="st">
    <text class="st2">健康风险：{{healthy}}</text>
  </view>
  <view class="sg">
    <text class="sg2">身高标准体重：<text class="kg">{{idealweight}}</text>kg</text>
