/* pages/zhougong/zhougong.wxss */

page {
  background-color: #fbf0dd;
}

.jm {
  margin-top: 18rpx;
  width: 100%;
  height: 400rpx;
  position: absolute;
  top: 0;
  text-align: center;
}

.jm image:nth-child(1) {
  width: 200rpx;
}

.wz {
  margin-top: 170rpx;
  z-index: 1;
  background-color: rgba(168, 170, 162, 0.753);
  padding: 20rpx;
  width: 90%;
  border: 1rpx solid rgba(143, 236, 216, 0.808);
  box-shadow: 5rpx 5rpx 15rpx #888;
  color: rgba(250, 253, 253, 0.938);
}

view input {
  width: 60%;
  height: 90rpx;
  margin-left: 40rpx;
}

.btn {
  width: 10%;
  margin-top: 15rpx;
  background-color: rgb(212, 212, 165);
  color: rgba(19, 18, 18, 0.966);
  float: right;
  margin-right: 10rpx;
}

.btn-hover {
  background-color: rgb(172, 172, 135);
}

.search {
  background-color: white;
  width: 90%;
  margin-top: 20rpx;
  border: 2rpx solid black;
  border-radius: 6rpx;
}

.sea {
  width: 40rpx;
  height: 40rpx;
  float: left;
  margin: 18rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.sea2 {
  float: right;
  margin-right: 20rpx;
  margin-top: 25rpx;
  background-color: rgb(228, 228, 17);
  width: 150rpx;
  height: 80rpx;
  text-align: center;
}

.content {
  margin-top: 50rpx;
  font-size: 35rpx;
  padding: 50rpx 30rpx;
  color: rgb(109, 107, 17);
}

.title {
  font-size: 60rpx;
  padding-bottom: 50rpx;
  color: rgba(49, 48, 48, 0.767);
}
